@model Cinema

@{
    ViewData["Title"] = "Edit a Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit an Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width:150px; max-height:150px" id="CinemaLogoPreview"/>
                </div>
                <div class="form-group">
                    <label asp-for="CinemaLogo" class="control-label"></label>
                    <input asp-for="CinemaLogo" class="form-control"/>
                    <span asp-validation-for="CinemaLogo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-success float-right" />
                    <a class="btn btn-secondary" asp-action="Index">Go back to Cinemas</a>
                </div>
                </form>
            </div> 
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $('#CinemaLogo').val();
        })
$('#CinemaLogo').on("change", function() {
    var output = document.getElementById('CinemaLogoPreview');
    output.src = $(this).val();
})
    </script>
}