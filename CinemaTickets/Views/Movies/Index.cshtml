@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.PosterImage)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.MovieCategory)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr class="text-center">
                        <td class="align-middle"><img src="@item.PosterImage" alt="@item.Name" style="max-width: 150px; max-height:150px" /></td>
                        <td class="align-middle">@Html.DisplayFor(modelItem=> item.Name)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem=> item.Description)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem=> item.MovieCategory)</td>
                        <td class="align-middle">
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Edit</i></a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye">Details</i></a>
                            <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id=@item.Id><i class="bi bi-cart-plus"></i> Add to Cart (Price: @item.Price.ToString("c"))</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Movies")
